@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<TAS.Resources.SharedResource> localizerShared
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Thông Tin Đại lý";
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="https://ableproadmin.com/dashboard/index.html">Home</a></li>
                            <li class="breadcrumb-item" aria-current="page">@ViewData["Title"]</li>
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">@ViewData["Title"]</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end --><!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">

                            </div>
                            <div class="d-flex">
                                <!-- Nút chọn file -->
                                <label for="importExcelAgent" class="btn btn-primary"><i class="ti ti-upload f-20"></i>&nbsp; Import Excel</label>
                                <input type="file" id="importExcelAgent" hidden>
                                <span id="file-name" class="ms-2 d-none"></span>
                                <button onclick="onExportTemplateExcel()" class="btn btn-primary buttonSearch"><i class="ti ti-file-x f-20"></i>&nbsp; Mẫu Excel</button>
                                <button class="btn btn-primary buttonSearch" data-bs-toggle="modal" data-bs-target="#AddNewRubberAgent"><i class="ti ti-plus f-20"></i>&nbsp;  Thêm mới</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="datatable-top">
                                <div class="datatable-dropdown">
                                    <label>
                                        @localizer["key_rowperpage"]:
                                        <select class="datatable-selector selector-paging" name="per-page">
                                            <option value="5">5</option>
                                            <option value="10" selected>10</option>
                                            <option value="15">15</option>
                                            <option value="20">20</option>
                                            <option value="25">25</option>
                                        </select>
                                    </label>
                                </div>
                                <div>
                                    <label></label>
                                </div>
                            </div>
                            <!-- [ Main Content ] end -->
                            <div id="AgentGrid" style="height: 500px;width:100%" class="ag-theme-alpine"></div>
                            <div id="topPager" class="ag-paging-button-wrapper">
                                <div class="grid-info">
                                    <label>
                                        <span id="start-entries">1</span>
                                        <span>-</span>
                                        <span id="last-entries"></span>
                                        <span>@localizer["key_of"]</span>
                                        <span id="total-entries"></span>
                                    </label>
                                </div>
                                <nav class="grid-paging" id="list-paging">
                                    <ul id="pager" class="pagination pagination-sm mb-0"></ul>
                                    <span id="rowCount" style="margin-left:12px"></span>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<partial name="~/Views/Shared/Modal/_PopupAddNewAgent.cshtml" />
@section Scripts {
    <script type="text/javascript" src="~/Contents/js/Agent/Agent.js"></script>
    <script>
        // var listdataEventsActual;
        var Agent = '#AgentGrid';
        var IsOptionAll = false;
        CreateGridAgent(true);
        CreateRowDataAgent();
        $('.selector-paging').select2({
            minimumResultsForSearch: Infinity
        });
        $('.selector-paging').change(function (e) {
            let selectPage = $(this).val();
            IsOptionAll = selectPage == '*';
            RefreshAllGridWhenChangeData();
        });
    </script>
}