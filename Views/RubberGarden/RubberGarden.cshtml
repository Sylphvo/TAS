@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<TAS.Resources.SharedResource> localizerShared
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Cập nhật Số liệu";
    var ListAgent = ViewBag.ComboAgent;
    var ListFarmCode = ViewBag.ComboFarmCode;

}
@section Style {
    <link rel="stylesheet" href="../Contents/css/RubberGarden/RubberGarden.css">
}
<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="https://ableproadmin.com/dashboard/index.html">Home</a></li>
                            <li class="breadcrumb-item" aria-current="page">Cập nhật số liệu</li>
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">Cập nhật số liệu</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end --><!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <label class="form-label" for="inputState">Đại lý</label>
                                <select id="ListCboAgent" class="form-select">
                                    @{
                                        if (ListAgent != null)
                                        {
                                            <option value="*" selected>All</option>
                                            foreach (var item in ListAgent)
                                            {
                                                <option value="@item.AgentCode">@item.AgentName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <div class="d-flex">
                                <!-- Nút chọn file -->
                                <label for="importExcel" class="btn btn-primary"><i class="ti ti-upload f-20"></i>&nbsp; Import Excel</label>
                                <input type="file" id="importExcel" hidden>
                                <span id="file-name" class="ms-2 d-none"></span>
                                <button onclick="InputNameFile(1)" class="btn btn-primary buttonSearch">Xuất Excel</button>
                                <button onclick="InputNameFile(2)" class="btn btn-primary buttonSearch">Mẫu Excel</button>
                                <button class="btn btn-primary buttonSearch" data-bs-toggle="modal" data-bs-target="#AddNewRubber"> Thêm mới</button>
                                <button class="btn btn-primary buttonSearch">Phê duyệt tất cả</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="datatable-top">
                                <div class="datatable-dropdown">
                                    <label>
                                        @localizer["key_rowperpage"]:
                                        <select class="datatable-selector selector-paging" name="per-page">
                                            <option value="5">5</option>
                                            <option value="10" selected>10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="*">All</option>
                                        </select>
                                    </label>
                                </div>
                                <div class="button_filter">
                                    @* <button class="btn btn-primary buttonSearch">Phê duyệt</button> *@
                                </div>
                            </div>
                            <!-- [ Main Content ] end -->
                            <div id="RubberGardenGrid" style="height: 500px;width:100%" class="ag-theme-alpine"></div>
                            <div id="topPager" class="ag-paging-button-wrapper">
                                <div class="grid-info">
                                    <label>
                                        <span id="start-entries">1</span>
                                        <span>-</span>
                                        <span id="last-entries"></span>
                                        <span>@localizer["key_of"]</span>
                                        <span id="total-entries"></span>
                                    </label>
                                </div>
                                <nav class="grid-paging" id="list-paging">
                                    <ul id="pager" class="pagination pagination-sm mb-0"></ul>
                                    <span id="rowCount" style="margin-left:12px"></span>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="AddNewRubber" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Rubber</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- [ form-element ] start -->
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Mã nhà vườn: *</label>
                                    <select id="ListCboFarmCode" class="form-select form-control">
                                        @{
                                            if (ListFarmCode != null)
                                            {
                                                foreach (var item in ListFarmCode)
                                                {
                                                    <option value="@item.FarmCode">@item.FarmCode</option>
                                                }
                                            }
                                        }
                                    </select>
                                    @* <small class="form-text text-muted">Please enter your full name</small> *@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Tên nhà vườn: *</label>
                                    <select id="ListCboFarmerName" class="form-select form-control">
                                        @{
                                            if (ListFarmCode != null)
                                            {
                                                foreach (var item in ListFarmCode)
                                                {
                                                    <option value="@item.FarmerName">@item.FarmerName</option>
                                                }
                                            }
                                        }
                                    </select>
                                    @* <small class="form-text text-muted">Please enter your Email id</small> *@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Khối lượng</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khối lượng">
                                    @* <small class="form-text text-muted">Please enter your full name</small> *@
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-3">
                                    <label class="form-label">TSC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập TSC">
                                    @* <small class="form-text text-muted">Please enter your Email id</small> *@
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">DRC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập DRC">
                                    @* <small class="form-text text-muted">Please enter your Email id</small> *@
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ form-element ] end -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Contents/js/RubberGarden/RubberGarden.js"></script>
    <script>
        ImportExcelRubberGarden('importExcel');// Import Excel
        var listdataEventsActual;
        var RubberGarden = '#RubberGardenGrid';
        var IsOptionAll = false;
        var listComboFarmCode = @Json.Serialize(ListFarmCode)
        CreateGridRubberGarden();
        $('#ListCboAgent').change(function (e) {
            let dataAgent = $(this).val();
            if(dataAgent == '*'){
                 gridApi.setRowData(ListDataFull);
            }
            else{
                gridApi.setRowData(ListDataFull.filter(x => x.agentCode == dataAgent));
            }
            //RefreshAllGridWhenChangeData();
        });
        $('.selector-paging').change(function (e) {
            let selectPage = $(this).val();
            IsOptionAll = selectPage == '*';
            RefreshAllGridWhenChangeData();
        });

        $('#ListCboAgent').select2();
        $('#ListCboFarmCode').select2();
        $('#ListCboFarmerName').select2();

    </script>
}