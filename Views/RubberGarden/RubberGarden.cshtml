@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<TAS.Resources.SharedResource> localizerShared
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Cập nhật Số liệu";
    var ListAgent = ViewBag.ComboAgent;

}
@section Style {
    <link rel="stylesheet" href="../Contents/css/RubberGarden/RubberGarden.css">
}
<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="https://ableproadmin.com/dashboard/index.html">Home</a></li>
                            <li class="breadcrumb-item" aria-current="page">Cập nhật số liệu</li>
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">Cập nhật số liệu</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end --><!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <label class="form-label" for="inputState">Đại lý</label>
                                <select id="ListCboAgent" class="form-select">
                                    @{
                                        if (ListAgent != null)
                                        {
                                            foreach (var item in ListAgent)
                                            {
                                                <option value="@item.AgentId">@item.AgentName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <div class="d-flex">
                                <!-- Nút chọn file -->
                                <label for="importExcel" class="btn btn-primary">Import Excel</label>
                                <input type="file" id="importExcel" hidden>
                                <span id="file-name" class="ms-2 d-none"></span>
                                <button onclick="onExportExcelData()" class="btn btn-primary buttonSearch">Xuất Excel</button>
                                <button onclick="onExportExcel()" class="btn btn-primary buttonSearch">Mẫu Excel</button>
                                <button onclick="addNewRowBody()" class="btn btn-primary buttonSearch">Thêm mới</button>
                                <button class="btn btn-primary buttonSearch">Chuyển dữ liệu</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="datatable-top">
                                <div class="datatable-dropdown">
                                    <label>
                                        @localizer["key_rowperpage"]:
                                        <select class="datatable-selector selector-paging" name="per-page">
                                            <option value="5">5</option>
                                            <option value="10" selected>10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="All">All</option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <!-- [ Main Content ] end -->
                            <div id="RubberGardenGrid" style="height: 500px;width:100%" class="ag-theme-alpine"></div>
                            <div id="topPager" class="ag-paging-button-wrapper">
                                <div class="grid-info">
                                    <label> 
                                        <span id="start-entries">1</span> 
                                        <span>-</span> 
                                        <span id="last-entries"></span> 
                                        <span>@localizer["key_of"]</span>
                                        <span id="total-entries"></span>
                                    </label>
                                </div>
                                <nav class="grid-paging" id="list-paging">
                                    <ul id="pager" class="pagination pagination-sm mb-0"></ul>
                                    <span id="rowCount" style="margin-left:12px"></span>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddNewRubber" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Rubber</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Contents/js/RubberGarden/RubberGarden.js"></script>    
    <script>
        RegisterEventExcelInput('importExcel');
        var listdataEventsActual;
        var RubberGarden = '#RubberGardenGrid';
        var IsOptionAll = false;
        CreateGridRubberGarden();
        $('#ListCboAgent').change(function (e) {
            RefreshAllGridWhenChangeData();
        });
        $('.selector-paging').change(function (e) {
            IsOptionAll = $(this).val() == 'All';
            RefreshAllGridWhenChangeData();
        });        
    </script>
}