@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<TAS.Resources.SharedResource> localizerShared
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Thông Tin Nhà Vườn";
    var ListAgent = ViewBag.ComboAgent;
    var ListFarmCode = ViewBag.ComboFarmCode;
}
@section Style {
    <link rel="stylesheet" href="../Contents/css/InformationGarden/InformationGarden.css">
}
<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="https://ableproadmin.com/dashboard/index.html">Home</a></li>
                            <li class="breadcrumb-item" aria-current="page">@ViewData["Title"]</li>
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">@ViewData["Title"]</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end --><!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                
                            </div>
                            <div class="d-flex">
                                <!-- Nút chọn file -->
                                <label for="importExcel" class="btn btn-primary"><i class="ti ti-upload f-20"></i>&nbsp; Import Excel</label>
                                <input type="file" id="importExcel" hidden>
                                <span id="file-name" class="ms-2 d-none"></span>
                                <button onclick="onExportTemplateExcel()" class="btn btn-primary buttonSearch"><i class="ti ti-file-x f-20"></i>&nbsp; Mẫu Excel Polygon</button>
                                <button class="btn btn-primary buttonSearch" data-bs-toggle="modal" data-bs-target="#AddNewRubberFarm"><i class="ti ti-plus f-20"></i>&nbsp;  Thêm mới</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="datatable-top">
                                <div class="datatable-dropdown">
                                    <label>
                                        @localizer["key_rowperpage"]:
                                        <select class="datatable-selector selector-paging" name="per-page">
                                            <option value="5" selected>5</option>
                                            <option value="10">10</option>
                                            <option value="15">15</option>
                                            <option value="20">20</option>
                                            <option value="25">25</option>
                                        </select>
                                    </label>
                                </div>
                                <div>
                                    <label></label>
                                </div>
                            </div>
                            <!-- [ Main Content ] end -->
                            <div id="InformationGardenGrid" style="height: 500px;width:100%" class="ag-theme-alpine"></div>
                            <div id="topPager" class="ag-paging-button-wrapper">
                                <div class="grid-info">
                                    <label>
                                        <span id="start-entries">1</span>
                                        <span>-</span>
                                        <span id="last-entries"></span>
                                        <span>@localizer["key_of"]</span>
                                        <span id="total-entries"></span>
                                    </label>
                                </div>
                                <nav class="grid-paging" id="list-paging">
                                    <ul id="pager" class="pagination pagination-sm mb-0"></ul>
                                    <span id="rowCount" style="margin-left:12px"></span>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="AddNewRubberFarm" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Rubber</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- [ form-element ] start -->
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Mã nhà vườn: *</label>
                                    <select id="ListCboFarmCode" class="form-select form-control">
                                        @{
                                            if (ListFarmCode != null)
                                            {
                                                foreach (var item in ListFarmCode)
                                                {
                                                    <option value="@item.FarmCode">@item.FarmCode</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Tên nhà vườn: *</label>
                                    <input type="number" class="form-control p-2" placeholder="Tên nhà vườn" id="RubberKg">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Khối lượng</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khối lượng" id="RubberKg">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">TSC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập TSC" id="TSCPercent">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Khối lượng</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khối lượng" id="RubberKg">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">TSC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập TSC" id="TSCPercent">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Khối lượng</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khối lượng" id="RubberKg">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">TSC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập TSC" id="TSCPercent">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 ps-2">
                                    <label class="form-label">Khối lượng</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khối lượng" id="RubberKg">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">TSC</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập TSC" id="TSCPercent">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ form-element ] end -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" onclick="UpdateDataAfterEdit(1)">Save</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Contents/js/geoMap.js"></script>
    <script type="text/javascript" src="~/Contents/js/InformationGarden/InformationGarden.js"></script>
    <script>
        var listdataEventsActual;
        var IsOptionAll = false;
        var InformationGarden = '#InformationGardenGrid';
        CreateGridInformationGarden(true);
        $('.selector-paging').select2({
            minimumResultsForSearch: Infinity
        });
    </script>
}