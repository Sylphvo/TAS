@model UserAccount
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Auth.cshtml";
    var returnUrl = (string?)ViewData["ReturnUrl"];
}

<!-- [ Pre-loader ] End -->
<div class="auth-main">
    <div class="auth-wrapper v1">
        <div class="auth-form">
            <div class="card my-5">
                <div class="card-body">
                    <div class="text-center mb-5">
                        <a href="#"><img src="../Logo/LogoBlack.png" alt="img"></a>
                    </div>
                    <h4 class="text-center f-w-500 mb-3">Login with your email</h4>
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        @Html.AntiForgeryToken()
                        <div class="mb-3"><input type="email" class="form-control" name="Email" id="floatingInput" placeholder="Email Address"></div>
                        <div class="mb-3"><input type="password" class="form-control" name="Password" id="floatingInput1" placeholder="Password"></div>
                        <div class="d-flex mt-1 justify-content-between align-items-center">
                            <div class="form-check"><input class="form-check-input input-primary" type="checkbox" id="customCheckc1" checked=""> <label class="form-check-label text-muted" for="customCheckc1">Remember me?</label></div>
                            <h6 class="text-secondary f-w-400 mb-0"><a href="forgot-password-v1.html">Forgot Password?</a></h6>
                        </div>
                        <div class="d-grid mt-4"><button type="submit" class="btn btn-primary">Login</button></div>
                        <div class="d-flex justify-content-between align-items-end mt-4">
                            <h6 class="f-w-500 mb-0">Don't have an Account?</h6>
                            <a asp-controller="Account" asp-action="Register" class="link-primary">Create Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>        
    </div>
</div>

